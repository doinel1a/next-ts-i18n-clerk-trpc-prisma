    "db:push": "prisma db push",
    "db:create-migration": "prisma migrate dev --create-only",
    "db:create-down-migration": "prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma --script > down.sql",
    "db-dev:migrate": "prisma migrate dev",
    "db-prod:migrate": "prisma migrate deploy",
    "db:migrate-status": "prisma migrate status",
    "db-danger:reset": "prisma migrate reset --force"
  },
  "prisma": {
    "schema": "./prisma"
